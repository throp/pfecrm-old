package com.pfe.crm.domain.entity;

import com.pfe.crm.core.domain.BaseEntity;

/**
 * Weight.java
 * 
 * The weight of a fire extinguisher.
 * 
 * Copyright (c) Northrop Development Group 2006
 * 
 * @author Ben Date: Aug 3, 2006
 */
public class Weight extends BaseEntity
{
    // DATA MEMBERS
    private static final long serialVersionUID = -5508559797813811754L;

    private Float pounds;

    private Boolean isActive = Boolean.TRUE;

    /**
     * @return the isActive
     */
    public Boolean getIsActive()
    {
        return isActive;
    }

    /**
     * @param isActive
     *            the isActive to set
     */
    public void setIsActive(Boolean isActive)
    {
        this.isActive = isActive;
    }

    /**
     * A string representation
     */
    public String toString()
    {
        return pounds + "";
    }

    /**
     * @return Returns the pounds.
     */
    public Float getPounds()
    {
        return pounds;
    }

    /**
     * @param pounds
     *            The pounds to set.
     */
    public void setPounds(Float pounds)
    {
        this.pounds = pounds;
    }

    /**
     * A generated textual description.
     */
    public String getDescription()
    {
        return pounds + " lbs";
    }

}
