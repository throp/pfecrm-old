		<put name="tabs" value="/includes/tabs_main.jsp" />
		<put name="page_title" value="/title.jsp" />
		<put name="page_options" value="options.jsp" />
		<put name="body" value="/includes/default_body.jsp" />
		<put name="bottom" value="/includes/bottom.jsp" />
		<put name="dialogBoxes" value="/includes/dialog_boxes.jsp" />
	</definition>
	
